<Window x:Class="SPV3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:spv3="clr-namespace:SPV3"
        mc:Ignorable="d"
        Title="SPV3 GUI"
        SnapsToDevicePixels="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        WindowStyle="None"
        Width="960"
        Height="540">
    <Window.Background>
        <ImageBrush ImageSource="Assets/background.jpg"/>
    </Window.Background>
    <Window.DataContext>
        <spv3:Main />
    </Window.DataContext>
    <Grid Margin="25">
        <!-- Main -->
        <StackPanel HorizontalAlignment="Left"
                    VerticalAlignment="Bottom">

            <!-- Launch SPV3 -->
            <Button>
                Launch SPV3
            </Button>

            <!-- Settings -->
            <Button>
                Settings
            </Button>

            <!-- Help -->
            <Button>
                Help
            </Button>

            <!-- Exit -->
            <Button>
                Exit
            </Button>
        </StackPanel>

        <!-- Updates -->
        <StackPanel HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">

            <StackPanel.Resources>
                <Style TargetType="{x:Type Label}">
                    <Setter Property="Foreground" Value="#BFFFFFFF"/>
                    <Setter Property="Background" Value="#BF008000"/>
                    <Setter Property="Margin" Value="1,0,0,0"/>

                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Green" />
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Resources>

            <!-- Assets update -->
            <Label>
                New SPV3 update available!
            </Label>

            <!-- Loader update -->
            <Label>
                New loader update available!
            </Label>
        </StackPanel>
        
        <!-- Version -->
        <StackPanel HorizontalAlignment="Right"
                    VerticalAlignment="Top">
            <Label Foreground="#3FFFFFFF">
                Version: 0000
            </Label>
        </StackPanel>
    </Grid>
</Window>