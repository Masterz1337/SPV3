<Controls:MetroWindow x:Class="SPV3.Main_Window"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:spv3="clr-namespace:SPV3"
                      mc:Ignorable="d"
                      Title="SPV3 GUI"
                      SnapsToDevicePixels="True"
                      WindowStartupLocation="CenterScreen"
                      ResizeMode="CanMinimize"
                      WindowStyle="None"
                      ShowTitleBar="False"
                      ShowCloseButton="False"
                      ShowMinButton="False"
                      BorderThickness="0"
                      Background="Black"
                      Width="960"
                      Height="540">
    <Window.DataContext>
        <spv3:Main />
    </Window.DataContext>
    <TabControl Name="MainTabControl"
                Background="Transparent"
                Padding="0"
                Margin="0,0,0,5"
                BorderThickness="0">
        <!-- Main -->
        <TabItem Name="MainTabItem">
            <Grid Width="960"
                  Height="540">
                <Grid.Background>
                    <ImageBrush ImageSource="Assets/background.jpg" />
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="230" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Versions -->
                <spv3:Version_UserControl x:Name="VersionUserControl"
                                          Grid.Column="0"
                                          Grid.Row="0"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Top"
                                          Margin="25" />

                <!-- Social -->
                <spv3:Social_UserControl Grid.Column="1"
                                         Grid.Row="0"
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Top"
                                         Margin="25" />

                <!-- Main -->
                <StackPanel Grid.Column="0"
                            Grid.Row="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Width="175"
                            Margin="25,25,25,35">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#0CFFFFFF" />
                            <Setter Property="Foreground" Value="#7FFFFFFF" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}" Padding="25,10"
                                                Margin="0,1,0,0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#19FFFFFF" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Resources>

                    <Image Source="Assets/logo.png"
                           Margin="0,0,0,10" />

                    <!-- Load SPV3 -->
                    <Button x:Name="LoadButton"
                            Visibility="{Binding Load.Visibility}"
                            Click="Load">
                        Load SPV3
                    </Button>

                    <!-- Install SPV3 -->
                    <Button Visibility="{Binding Install.Visibility}"
                            Click="Install">
                        Install SPV3
                    </Button>

                    <!-- Settings -->
                    <Button Click="Settings">
                        Settings
                    </Button>

                    <!-- About -->
                    <Button Click="About">
                        About
                    </Button>

                    <!-- Help -->
                    <Button Click="Help">
                        Help
                    </Button>

                    <!-- Exit -->
                    <Button Click="Quit">
                        Exit
                    </Button>
                </StackPanel>

                <!-- Errors -->
                <StackPanel Grid.Column="1"
                            Grid.Row="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Visibility="{Binding Error.Visibility}"
                            Margin="25">
                    <Label Content="{Binding Error.Content}"
                           MouseLeftButtonUp="Report">
                        <Label.Style>
                            <Style TargetType="{x:Type Label}">
                                <Setter Property="Foreground" Value="#BFFFFFFF" />
                                <Setter Property="Background" Value="#BFDC143C" />

                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Crimson" />
                                        <Setter Property="Foreground" Value="White" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>
                    </Label>
                </StackPanel>
            </Grid>
        </TabItem>

        <!-- Configuration -->
        <TabItem x:Name="ConfigurationTabItem">
            <spv3:Configuration_UserControl x:Name="ConfigurationUserControl" />
        </TabItem>

        <!-- Report -->
        <TabItem x:Name="ReportTabItem">
            <spv3:Report_UserControl x:Name="ReportUserControl" />
        </TabItem>

        <!-- Install -->
        <TabItem x:Name="InstallTabItem">
            <spv3:Install_UserControl x:Name="InstallUserControl" />
        </TabItem>

        <!-- Update -->
        <TabItem x:Name="UpdateTabItem">
            <Label Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
                To install the update, please extract the contents of the folder to the following folder.
            </Label>
        </TabItem>
    </TabControl>
</Controls:MetroWindow>