<UserControl x:Class="SPV3.Install_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SPV3"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <local:Install />
    </UserControl.DataContext>
    <UserControl.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#7F000000" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" Padding="25,10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#BF000000" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Width="960"
          Height="540">
        <Grid.Background>
            <ImageBrush ImageSource="Assets/background_install.jpg" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="225" /> <!-- top      -->
            <RowDefinition Height="115" /> <!-- contents -->
            <RowDefinition Height="*" />   <!-- bottom   -->
        </Grid.RowDefinitions>

        <!-- Installation -->
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="640">
            <Label Content="Location:"
                   Foreground="White" />
            <DockPanel>
                <Button DockPanel.Dock="Right"
                        Margin="1,0,0,0"
                        Content="Browse"
                        Click="Browse" />
                <TextBox Text="{Binding Target}"
                         VerticalContentAlignment="Center"
                         Margin="1,0,0,0"
                         BorderThickness="0" />
            </DockPanel>

            <DockPanel Margin="0,1,0,0">
                <Button Click="Back">
                    Go back...
                </Button>
                <Button x:Name="InstallButton"
                        Margin="1,0,0,0"
                        Click="Install"
                        Content="Install"
                        IsEnabled="{Binding CanInstall}" />
            </DockPanel>
        </StackPanel>

        <!-- Status -->
        <Label Grid.Row="2"
               Content="{Binding Status}"
               Foreground="White"
               HorizontalAlignment="Center"
               VerticalAlignment="Bottom"
               Margin="0,0,0,50" />
    </Grid>
</UserControl>